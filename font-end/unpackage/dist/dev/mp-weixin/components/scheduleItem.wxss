
.page {
	width: 100%;
	box-sizing: border-box;
	padding: 4rpx;
	height: 100%;
}
.container {
	border-radius: 20rpx;
	height: 100%;
	box-shadow: 0px 4rpx 4rpx rgba(0, 0, 0, 0.2);
	overflow: hidden;
	box-sizing: border-box;
	padding: 2rpx;
}
.info {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
}
.icon {
	width: 32rpx;
	height: 32rpx;
	-webkit-align-self: center;
	        align-self: center;
	margin-top: 8rpx;
}
.icon>image {
	width: 100%;
	height: 100%;
}
.txt {
	-webkit-align-self: center;
	        align-self: center;
	font-weight: 400;
	font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
	font-size: 24rpx;
}
.scheduleItem {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	margin-bottom: 16rpx;
}
.scheduleItem>image {
	width: 40rpx;
	height: 40rpx;
}
.scheduleTxt {
	margin-left: 16rpx;
	font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
	font-size: 30rpx;
}
.createScheduleItem {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	margin-bottom: 16rpx;
}
.createIcon {
	width: 40rpx;
	height: 40rpx;
}
.createIcon>image {
	height: 100%;
	width: 100%;
}
.createTxt {
	margin-left: 16rpx;
	font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
	font-size: 30rpx;
}
.createInput {
	width: 60%;
}
.createInput>input {
	width: 100%;
	border: none;
	border-bottom: #1296DB solid 2rpx;
	text-align: left;
	padding-left: 8rpx;
	font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
}
.arrow {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	height: 100%;
	width: 100%;
}
.upArrow {
	width: 40rpx;
	height: 40rpx;
	-webkit-align-self: center;
	        align-self: center;
}
.downArrow {
	width: 40rpx;
	height: 40rpx;
	-webkit-align-self: center;
	        align-self: center;
}
.upArrow>image {
	width: 100%;
	height: 100%;
}
.downArrow>image {
	width: 100%;
	height: 100%;
}

