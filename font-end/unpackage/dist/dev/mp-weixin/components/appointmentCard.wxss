
.page {
	box-sizing: border-box;
	padding: 24rpx 28rpx 20rpx 28rpx;
	border-radius: 16rpx;
	background-color: #FFFFFF;
	margin-bottom: 16rpx;
}
.contentAndStatus {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.content {
	-webkit-align-self: center;
	        align-self: center;
	font-size: 40rpx;
}
.time {
	font-size: 28rpx;
	color: #666666;
	margin-top: 16rpx;
}
.place {
	box-sizing: border-box;
	padding: 4rpx 6rpx;
	background-color: #F5F5F5;
	color: #666666;
	width: -webkit-fit-content;
	width: fit-content;
	border-radius: 8rpx;
	font-size: 26rpx;
	margin-top: 16rpx;
}
.idCard {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	height: 100rpx;
	margin-top: 8rpx;
	margin-bottom: 4rpx;
}
.status {
	-webkit-align-self: center;
	        align-self: center;
	font-size: 30rpx;
}
.avatar {
	-webkit-align-self: center;
	        align-self: center;
	height: 64rpx;
	min-width: 64rpx;
	border-radius: 50%;
}
.avatar>image {
	height: 100%;
	width: 100%;
	border-radius: 50%;
}
.nameAndId {
	-webkit-align-self: center;
	        align-self: center;
	margin-left: 32rpx;
	font-size: 28rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	width: 100%;
}
.nameAndIdTxt,
.nameAndIdArrow {
	-webkit-align-self: center;
	        align-self: center;
}
.nameAndIdArrow {
	height: 26rpx;
	width: 26rpx;
}
.nameAndIdArrow>image {
	height: 100%;
	width: 100%;
}
.paddingTop {
	padding-top: 18rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-justify-content: space-around;
	        justify-content: space-around;
	font-size: 36rpx;
}
.borderLeft{
	border: none;
	border-left: 1rpx solid rgba(0,0,0,0.1);
}

